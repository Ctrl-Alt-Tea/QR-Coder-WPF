<Window x:Class="QR_Coder_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QR_Coder_WPF"
        mc:Ignorable="d"
        Title="QR Coder" Height="450" Width="800" Icon="/favicon.ico" ResizeMode="CanMinimize" WindowStyle="ThreeDBorderWindow">
    <Grid>
        <Label x:Name="welcomeLabel" Content="QR Coder" HorizontalAlignment="Left" Margin="2,0,0,0" VerticalAlignment="Top" FontSize="36" FontFamily="MV Boli"/>
        <TextBlock HorizontalAlignment="Left" Margin="582,386,0,0" VerticalAlignment="Top" FontSize="14">
            <Hyperlink NavigateUri="https://github.com/Ctrl-Alt-Tea" RequestNavigate="Hyperlink_RequestNavigate">
                Follow on GitHub: Ctrl-Alt-Tea
            </Hyperlink>
        </TextBlock>
        <RadioButton x:Name="base64Option" Content="Base64 to QR Code" HorizontalAlignment="Left" Margin="52,87,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="textOption" Content="Text/URL to QR Code" HorizontalAlignment="Left" Margin="52,107,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="wifiOption" Content="Wifi Password to QR Code" HorizontalAlignment="Left" Margin="52,127,0,0" VerticalAlignment="Top"/>
        <Label Content="What type of QR Code would you like to create:" HorizontalAlignment="Left" Margin="10,56,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="txtInput" HorizontalAlignment="Left" Margin="29,185,0,0" TextWrapping="Wrap" Text="QR Code string" VerticalAlignment="Top" Width="706" Height="22"/>
        <Label Content="Text to encode into QR Code:" HorizontalAlignment="Left" Margin="10,154,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Image x:Name="pictureBoxQRCode" HorizontalAlignment="Left" Height="205" Margin="272,217,0,0" VerticalAlignment="Top" Width="245" RenderTransformOrigin="0.527,0.502"/>
        <Button x:Name="btnGenerate" Content="Generate QR Code" HorizontalAlignment="Left" Margin="29,245,0,0" VerticalAlignment="Top" Height="60" Width="110" Background="ForestGreen" Foreground="White"/>
        <Button x:Name="btnCopy" Content="Copy QR Code" HorizontalAlignment="Left" Margin="29,308,0,0" VerticalAlignment="Top" Height="30" Width="110" Click="btnCopy_Click" Background="SteelBlue" Foreground="White"/>
        <Button x:Name="btnSave" Content="Save QR Code" HorizontalAlignment="Left" Margin="29,371,0,0" VerticalAlignment="Top" Height="30" Width="110" Click="btnSave_Click" Background="SteelBlue" Foreground="White"/>

    </Grid>
</Window>
